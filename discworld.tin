#split 0 1;

#log APPEND discworld.log;

#unaction {%*};
#unhighlight {%*};

#event {SESSION CONNECTED} {
  #history read input.txt;
};

#event {SESSION DISCONNECTED} {
  #history write input.txt;
};

#config {convert meta};
#config {repeat char} {!};
#config {verbatim} {on};
#config {command color} {cyan};
#config buffer_size 1000000;

#var chat_file {logs/chat.log};
#var tindir {$info[SYSTEM][CWD]};

/* █▓▒░ TABBED ░▒▓█ */
#tab {help-tt} #tab {manual}; #tab {boards}; #tab {maps};
#tab {db }; #tab {db-place }; #tab {db-npc };

#alias p1 {
  prompt "$newline$%^GAINSBORO%^<$hurtcolour$$hp$/$maxhp$%^GAINSBORO%^hp %^CHRYSOPHRASE%^$gp$/$maxgp$%^GAINSBORO%^gp %^YELLOW%^$xp$%^GAINSBORO%^xp %^BLUE%^$burden$ %^LIGHTGRAY%^$combat_attitude$ $combat_response$ %^GRAY%^$temp$%^GAINSBORO%^> "
};

#alias p2 {
  prompt "%^PETULIAN%^$hp$/$maxhp$ %^HOLYWOOD%^$gp$/$maxgp$ %^FLAMINGO%^$xp$$reset$"
};

/* █▓▒░ FUZZY LISTS ░▒▓█ */
#alias {help-tt} {#script ./scripts/help-tt.sh };
#alias {manual}  {#system ./scripts/manual-browse.sh};
#alias {maps}    {#system ./scripts/maps.sh };
#alias {boards}  {#system ./scripts/boards.sh };
#alias {help-ls} {#system ./scripts/help-ls.sh };

/* █▓▒░ IDLE ░▒▓█ */
#alias {woke}    {#unticker chill; #ticker;}
#alias {chill}   {#ticker chill loop3 200; #ticker;}
#alias {woke2}    {#unticker chill2; #ticker;}
#alias {chill2}   {#ticker chill2 loop2 200; #ticker;}

/* █▓▒░ QUOW ░▒▓█ */
#alias {db} {#system xdg-open "https://quow.co.uk/cow.php?t=Items&s=%0"};
#alias {db-place} {#system xdg-open "https://quow.co.uk/cow.php?t=Places&s=%0"};
#alias {db-npc} {#system xdg-open "https://quow.co.uk/cow.php?t=NPCs&s=%0"};

/* █▓▒░ RELOAD ░▒▓█ */
#alias reload {
  #read discworld.tin;
  #showme {<cfa>reloaded!};
};

/* █▓▒░ META TOGGLE ░▒▓█ */
#alias {metaon} { #config {convert meta} on; };
#alias {metaoff} { #config {convert meta} off; };

/* █▓▒░ RECONNECT ░▒▓█ */
#alias {reconnect} {
 #zap discworld;
 #session discworld discworld.starturtle.net 4242;
};

/* █▓▒░ BASIC TRIGGERS ░▒▓█ */
#action {The light surrounding you flickers and winks out.} {woke};
#nop #read scripts/zmp/zmp.tin;

#high {^You prepare to %1} {orange}
#high {^You attempt to %1} {pink}
#high {^You launch %1} {lime}
#high {^You kill the %1} {red}
#high {^Launching a powerful attack %1} {lime}
#high {^Unleashing a whirlwind %1} {lime}
#high {^Finishing your wildswing attack, you %1} {lime}
#high {^Swinging your weapon around %1} {lime}
#high {^The dun horse deals the %1} {red}
#high {^With one last attack, you %1} {red}

#if {"@discworld{}" !== ""} {
 reconnect;
};
